{
  "manifest_version": 3,
  "name": "Floating Custom Window",
  "version": "1.0",
  "description": "Crie uma janela flutuante personalizada com conte√∫do HTML.",
  "permissions": ["activeTab", "scripting", "tabs", "windows", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
